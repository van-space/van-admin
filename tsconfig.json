{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
		"moduleResolution": "bundler",
    "strict": true,
		"jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "useDefineForClassFields": true,
		"allowImportingTsExtensions": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [],
    "paths": {
      "~": [
        "./src"
      ],
      "~/*": [
        "./src/*"
      ],
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx", "src/components/ui/Button",
  ],
  "exclude": [
    "node_modules",
    "assets",
    "dist/**"
  ]
}